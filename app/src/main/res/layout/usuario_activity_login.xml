<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/iniciarsesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="50dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="Iniciar Sesión"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iniciarsesion"
        android:layout_margin="10dp"
        android:layout_marginTop="293dp"
        android:layout_marginBottom="100dp"
        android:background="#30120F0F"
        android:drawableRight="@drawable/icono_visto"
        android:drawablePadding="20dp"
        android:hint="Email"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/etcontraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etemail"
        android:layout_margin="10dp"
        android:background="#30120F0F"

        android:drawableRight="@drawable/icono_password"
        android:drawablePadding="20dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etcontraseña"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/btn_registrar"
        android:fontFamily="monospace"
        android:text="Iniciar Sesión"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etcontraseña"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="monospace"
        android:text="Regístrate"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/olvidocontraseña"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="77dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#ffffff"
        android:text="¿Has olvidado tu contraseña?"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/others"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/socialicons"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="148dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="25dp"
        android:text="o inicia sesión con" />

    <LinearLayout
        android:id="@+id/socialicons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:gravity="center">


        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:src="@drawable/redsocial_google" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:src="@drawable/redsocial_facebook" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:src="@drawable/redsocial_twitter" />

    </LinearLayout>


</RelativeLayout>